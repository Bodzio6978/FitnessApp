<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/meal_view_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvNameMeal"
            style="@style/mealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="Breakfast" />

        <TextView
            android:id="@+id/tvKcalValueMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameMeal"
            android:layout_alignStart="@+id/tvNameMeal"
            android:text="215" />

        <TextView
            android:id="@+id/tvKcalMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/tvKcalValueMeal"
            android:text="@string/kcal" />

        <TextView
            android:id="@+id/tvCarbsValueMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/tvKcalMeal"
            android:text="12" />

        <TextView
            android:id="@+id/tvCarbsMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/tvCarbsValueMeal"
            android:text="@string/carb" />

        <TextView
            android:id="@+id/tvProteinValueMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/tvCarbsMeal"
            android:text="12" />

        <TextView
            android:id="@+id/tvProteinMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/tvProteinValueMeal"
            android:text="@string/prot" />

        <TextView
            android:id="@+id/tvFatValueMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/tvProteinMeal"
            android:text="12" />

        <TextView
            android:id="@+id/tvFatMeal"
            style="@style/secondaryMealInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvKcalValueMeal"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/tvFatValueMeal"
            android:text="@string/fat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="mini" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_view_main_container"
        android:elevation="6dp"
        tools:itemCount="2"
        tools:listitem="@layout/meal_layout" />

</RelativeLayout>