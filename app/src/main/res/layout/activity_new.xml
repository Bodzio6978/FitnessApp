<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.NewActivity">

    <RelativeLayout
        android:id="@+id/tvTitleNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibBackNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/primary" />


        <Button
            android:id="@+id/btSaveNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNameNew"
        style="@style/newTextView"
        android:layout_below="@+id/tvTitleNew"
        android:layout_marginTop="20dp"
        android:text="@string/name" />

    <EditText
        android:id="@+id/etNameNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvNameNew"
        android:layout_toEndOf="@+id/tvNameNew" />


    <TextView
        android:id="@+id/tvBrandNew"
        style="@style/newTextView"
        android:layout_below="@+id/etNameNew"
        android:text="@string/brand" />

    <EditText
        android:id="@+id/etBrandNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvBrandNew"
        android:layout_toEndOf="@+id/tvNameNew" />

    <TextView
        android:id="@+id/tvNutritionTitleNew"
        style="@style/newTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBrandNew"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/toolbar"
        android:padding="10dp"
        android:text="Nutrition values in:"
        android:textColor="@color/white" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNutritionTitleNew"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/primary"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In 100g" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In container" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In portion" />

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/tvWeightNew"
        style="@style/newTextView"
        android:layout_below="@+id/tlNew"
        android:layout_marginTop="30dp"
        android:text="@string/container_weight" />

    <EditText
        android:id="@+id/etWeightNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvWeightNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="numberDecimal" />

    <TextView
        style="@style/g"
        android:layout_alignBottom="@+id/etWeightNew" />


    <TextView
        android:id="@+id/tvCaloriesNew"
        style="@style/newTextView"
        android:layout_below="@+id/tvWeightNew"
        android:layout_marginTop="25dp"
        android:text="@string/caloriesStar" />


    <EditText
        android:id="@+id/etCaloriesNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvCaloriesNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="numberDecimal" />

    <TextView
        style="@style/g"
        android:layout_alignBottom="@+id/etCaloriesNew" />


    <TextView
        android:id="@+id/tvCarbsNew"
        style="@style/newTextView"
        android:layout_below="@id/tvCaloriesNew"
        android:text="@string/carbohydrates" />

    <EditText
        android:id="@+id/etCarbsNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvCarbsNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="numberDecimal" />

    <TextView
        style="@style/g"
        android:layout_alignBottom="@+id/etCarbsNew" />

    <TextView
        android:id="@+id/tvProteinNew"
        style="@style/newTextView"
        android:layout_below="@id/tvCarbsNew"
        android:text="@string/protein" />

    <EditText
        android:id="@+id/etProteinNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvProteinNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="number" />

    <TextView
        style="@style/g"
        android:layout_alignBottom="@+id/etProteinNew" />

    <TextView
        android:id="@+id/tvFatNew"
        style="@style/newTextView"
        android:layout_below="@id/tvProteinNew"
        android:text="@string/fatStar" />

    <EditText
        android:id="@+id/etFatNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvFatNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="number" />

    <TextView
        style="@style/g"
        android:layout_alignBottom="@+id/etFatNew" />

    <TextView
        android:id="@+id/tvCodeNew"
        style="@style/newTextView"
        android:layout_below="@id/tvFatNew"
        android:layout_marginTop="25dp"
        android:text="Bar code" />

    <EditText
        android:id="@+id/etBarCodeNew"
        style="@style/newEditText"
        android:layout_alignTop="@+id/tvCodeNew"
        android:layout_marginStart="150dp"
        android:layout_toStartOf="@+id/ibBarCodeNew"
        android:layout_toEndOf="@+id/tvNameNew"
        android:inputType="number" />


    <ImageButton
        android:id="@+id/ibBarCodeNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/etBarCodeNew"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_bar_code"
        app:tint="@color/primary" />

    <com.gmail.bodziowaty6978.customviews.NotificationView
        android:id="@+id/nfvNew"
        style="@style/notification" />


</RelativeLayout>