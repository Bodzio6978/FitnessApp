<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainfragments.CaloriesFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:mealName="@string/breakfast" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_breakfast"
                android:layout_marginTop="15dp"
                app:mealName="@string/lunch" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_lunch"
                android:layout_marginTop="15dp"
                app:mealName="@string/dinner" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_supper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_dinner"
                android:layout_marginTop="15dp"
                app:mealName="@string/supper" />

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@+id/calories_supper"
                    android:background="@android:color/transparent"
                    android:layout_height="80dp"/>

            </RelativeLayout>


        </ScrollView>


        <RelativeLayout
            android:background="@drawable/bottom_nutrition_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:elevation="7dp"
                android:padding="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/nvCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Calories"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/nvCalories"
                android:id="@+id/nvCarbohydrates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Carbs"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_toEndOf="@+id/nvCarbohydrates"
                android:id="@+id/nvProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Protein"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/nvProtein"
                android:id="@+id/nvFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Fat"/>

            </RelativeLayout>

        </RelativeLayout>


        <com.gmail.bodziowaty6978.customviews.NotificationView
            android:id="@+id/ntvCalories"
            style="@style/notification" />

</RelativeLayout>


