<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CaloriesFragment">


        <RelativeLayout
            android:id="@+id/rlCalendarCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/tvTodayCalories"
                style="@style/TextInput_ListItemTitles_ImportantText_Snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Today" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

        </RelativeLayout>

        <View
            style="@style/divider"
            android:layout_alignBottom="@id/rlCalendarCalories" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlCalendarCalories">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:mealName="@string/breakfast" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_breakfast"
                android:layout_marginTop="15dp"
                app:mealName="@string/lunch" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_lunch"
                android:layout_marginTop="15dp"
                app:mealName="@string/dinner" />

            <com.gmail.bodziowaty6978.customviews.MealView
                android:id="@+id/calories_supper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calories_dinner"
                android:layout_marginTop="15dp"
                app:mealName="@string/supper" />

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@+id/calories_supper"
                    android:background="@android:color/transparent"
                    android:layout_height="80dp"/>

            </RelativeLayout>


        </ScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:background="@drawable/bottom_nutrition_values"
                android:layout_width="wrap_content"
                android:elevation="6dp"
                android:padding="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/nvCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Calories"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"

                android:layout_toEndOf="@+id/nvCalories"
                android:id="@+id/nvCarbohydrates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Carbs"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_toEndOf="@+id/nvCarbohydrates"
                android:id="@+id/nvProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Protein"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <com.gmail.bodziowaty6978.customviews.NutritionView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/nvProtein"
                android:id="@+id/nvFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:name="Fat"/>

            </RelativeLayout>

        </RelativeLayout>


        <com.gmail.bodziowaty6978.customviews.NotificationView
            android:id="@+id/ntvCalories"
            style="@style/notification" />

</RelativeLayout>


