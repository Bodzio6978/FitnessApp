<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontWeight">400</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/error</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!--    Text size preset for every app element-->

    <style name="PageTitle" parent="Theme.FitnessApp">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Paragraph_Secondary_Caption" parent="Theme.FitnessApp">>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ListTitle" parent="Theme.FitnessApp">>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">550</item>
    </style>
    <style name="Button_Tab" parent="Theme.FitnessApp">>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">600</item>
    </style>
    <style name="TextInput_ListItemTitles_ImportantText_Snippet" parent="Theme.FitnessApp">>
        <item name="android:textSize">18sp</item>
    </style>


    <!--    Text size preset for every app element-->

    <style name="InputEditText" parent="TextInput_ListItemTitles_ImportantText_Snippet">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="notification" parent="Paragraph_Secondary_Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">-100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/notification</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>




</resources>