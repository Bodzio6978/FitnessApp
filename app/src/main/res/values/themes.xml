<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessApp" parent="Theme.MaterialComponents.NoActionBar">
        <item name="background">@color/darkGrey</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSurface">@color/darkGrey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/darkGrey</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
    </style>

    <!--    Text size preset for every app element-->

    <style name="PageTitle" parent="Theme.FitnessApp">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Paragraph_Secondary_Caption" parent="Theme.FitnessApp">>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey5</item>
    </style>
    <style name="ListTitle" parent="Theme.FitnessApp">>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">550</item>
    </style>
    <style name="Button_Tab" parent="Theme.FitnessApp">>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">600</item>
    </style>
    <style name="TextInput_ListItemTitles_ImportantText_Snippet" parent="Theme.FitnessApp">>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SummaryValues" parent="Theme.FitnessApp">
        <item name="android:textSize">18sp</item>
    </style>


    <!--    Text size preset for every app element-->

    <style name="InputEditText" parent="TextInput_ListItemTitles_ImportantText_Snippet">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
        <item name="backgroundOverlayColorAlpha">1</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="secondaryMealInformation" parent="Paragraph_Secondary_Caption">
        <item name="android:textColor">@color/grey35</item>
    </style>

    <style name="mealLayoutSecondary" parent="Paragraph_Secondary_Caption">
        <item name="android:textColor">@color/grey4</item>
    </style>

    <style name="settingsEditText" parent="newEditText">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="introductionEditText" parent="settingsEditText">
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_centerVertical">false</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="newTextView" parent="TextInput_ListItemTitles_ImportantText_Snippet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="newEditText" parent="TextInput_ListItemTitles_ImportantText_Snippet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">7dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="newRelativeLayout" parent="Theme.FitnessApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="typeSettingsView" parent="g">
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="g" parent="TextInput_ListItemTitles_ImportantText_Snippet">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">g</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvNutritionName" parent="Paragraph_Secondary_Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="tvNutritionValue" parent="tvNutritionName">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="SettingsView" parent="Theme.FitnessApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="SettingsRl" parent="Theme.FitnessApp">
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/settings_layout</item>
    </style>

    <style name="backArrow" parent="Theme.FitnessApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_ios_new_24</item>
        <item name="tint">@color/primary</item>
    </style>

</resources>